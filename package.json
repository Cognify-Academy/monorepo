{
  "name": "cognify-academy-monorepo",
  "version": "1.0.0",
  "packageManager": "bun",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@parcel/watcher": "^2.5.1",
    "@rollup/rollup-darwin-arm64": "^4.36.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.15"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/cognify-ui/**/*.{js,jsx,ts,tsx}": [
      "cd apps/cognify-ui && bun run lint --fix",
      "cd apps/cognify-ui && bun run format"
    ],
    "apps/api/**/*.{js,ts}": [
      "cd apps/api && bun run prettier"
    ]
  }
}
