{
  "name": "cognify-academy",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --cwd apps/api dev\" \"bun run --cwd apps/cognify-ui dev\"",
    "build": "bun run --cwd apps/api build && bun run --cwd apps/cognify-ui build",
    "test": "bun test apps/api apps/cognify-ui/src/__tests__",
    "test:watch": "bun run test:api && bun run test:ui:watch",
    "test:api": "bun --cwd apps/api test",
    "test:ui": "bun --cwd apps/cognify-ui test",
    "test:ui:watch": "bun --cwd apps/cognify-ui run test:watch",
    "test:ui:ui": "bun --cwd apps/cognify-ui run test:ui",
    "test:ui:coverage": "bun --cwd apps/cognify-ui run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:auth": "playwright test e2e/auth/login.spec.ts",
    "test:e2e:instructor": "playwright test e2e/courses/instructor-workflow.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:storybook": "bun --cwd apps/cognify-ui run test-storybook",
    "test:coverage": "bun run test:ui:coverage",
    "test:blockchain": "cd blockchain/certificate_nft && anchor test",
    "test:all": "bun run test && bun run test:e2e && bun run test:storybook",
    "storybook": "bun --cwd apps/cognify-ui run storybook",
    "storybook:build": "bun --cwd apps/cognify-ui run storybook:build",
    "lint": "prettier --write .",
    "type-check": "bun run --cwd apps/api type-check && bun run --cwd apps/cognify-ui type-check",
    "setup-devnet": "cd blockchain/certificate_nft && bash scripts/setup-devnet.sh",
    "test:certificate": "bash scripts/test-certificate-issuance.sh",
    "deploy-devnet": "cd blockchain/certificate_nft && anchor deploy",
    "build-nft": "cd blockchain/certificate_nft && anchor build && bash copy_idl_to_api.sh",
    "test-nft": "cd blockchain/certificate_nft && anchor test",
    "setup-test-student": "bash scripts/setup-test-student.sh",
    "dev:api": "cd apps/api && bun run dev",
    "dev:ui": "cd apps/cognify-ui && bun run dev",
    "install:all": "bun install && cd apps/api && bun install && cd ../cognify-ui && bun install && cd ../../blockchain/certificate_nft && bun install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/test-runner": "^0.15.0",
    "@types/node": "^20",
    "concurrently": "^8.2.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "resolutions": {
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7"
  },
  "dependencies": {
    "@elysiajs/static": "^1.4.5",
    "tweetnacl": "^1.0.3"
  }
}
